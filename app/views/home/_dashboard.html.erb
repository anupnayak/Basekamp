<section class="section pt3">
	<p class="title is-5 border-bottom pb3 has-text-centered">Welcome <%= current_user.name %> 👋🏻</p>
	<div class="columns">

		<div class="column border-right ph4">
			<div class="level">
				<div class="level-left">
					<h3 class="subtitle is-5">My Projects <span class="tag is-rounded">0</span></h3>
				</div>
				<div class="level-right">
					<p class="field">
						<%= link_to new_project_path, class: 'button is-small' do %>
							<span class="icon is-small has-text-link"><i class="fa fa-plus"></i></span>
						<% end %>
					</p>
				</div>
			</div>
			<hr />
			
		
		</div>
		<div class="column border-right ph4">
			<div class="level">
				<div class="level-left">
					<h3 class="subtitle is-5">My Teams <span class="tag is-rounded">0</span></h3>
				</div>
				<div class="level-right">
					<p class="field">
						<%= link_to new_team_path, class: 'button is-small' do %>
							<span class="icon is-small has-text-link"><i class="fa fa-plus"></i></span>
						<% end %>
					</p>
				</div>
			</div>
			<hr />
			

		</div>

		<div class="column ph4">
			<h3 class="subtitle is-5">Activity</h3>
			<hr />
			
		</div>

	</div>
</section>